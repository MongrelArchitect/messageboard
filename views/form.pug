extends layout

block content
  .container
    h1='New Message'
    form(method='POST' action='/new')
      ul.new-message
        li
          label(for='user')='Name:'
            input#user(name='user' required type='text')
        li
          label(for='message')='Message:'
            textarea#message(rows='4' name='message' required)
        li.form-buttons
          button.submit(type='submit')='Submit'
          a.return(href='/')='Return'
